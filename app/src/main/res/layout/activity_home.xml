<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video"/>

    <com.ramotion.directselect.DSListView
        android:id="@+id/ds_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundC"
        android:visibility="invisible"
        app:cell_font_size="8sp"
        app:data_array="@array/Countries1"
        app:picker_box_view="@id/picker_box"
        app:scale_animations="true"
        app:scale_animations_factor="1.3"
        app:scale_animations_pivot_center="true"
        app:selected_index="2"
        app:selector_background="@color/countrySelector" />


    <com.ramotion.directselect.DSDefaultPickerBox
        android:id="@+id/picker_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        android:background="@color/countrySelector"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/video"
        app:layout_constraintTop_toTopOf="@+id/video" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="country_toast"
        android:id="@+id/ct"/>

